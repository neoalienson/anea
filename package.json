{
  "name": "kol-matching-platform",
  "version": "1.0.0",
  "description": "KOL Matching Platform - Connect SMBs with KOLs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-nextjs && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend-nextjs && npm run build",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend-nextjs && npm test",
    "setup": "npm install && cd backend && npm install && cd ../frontend-nextjs && npm install",
    "deploy:staging": "./deployment/deploy.sh staging",
    "deploy:production": "./deployment/deploy.sh production"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "supabase": "^2.45.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "dotenv": "^17.2.2"
  }
}
